<%- include('./partials/header', { title: title || 'Error', mainClass: 'error-page' }) %>

    <div class="error-container">
        <h2><%= title || 'Error' %></h2>
        <p class="error-message"><%= message || 'An error occurred' %></p>
        <% if (process.env.NODE_ENV === 'development' && locals.error && locals.error.stack) { %>
            <pre class="error-stack"><%= locals.error.stack %></pre>
        <% } %>
        <a href="/" class="btn btn-primary" aria-label="Return to home page" tabindex="0">Return to Home</a>
    </div>

<%- include('./partials/footer') %>
